<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/humidity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.humidity.HumidityFragment"
    android:background="@drawable/index">


    <TextView
        android:id="@+id/text_lastweek"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_weight="66.6"
        android:gravity="center"
        android:text="Last Week"
        android:textAlignment="center"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="33.3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_Monday"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_weight="66.6"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_Tuesday"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="66.6"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_Wednesday"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_weight="66.6"
            android:gravity="center"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/text_Thursday"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="66.6"
            android:gravity="center"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/text_Friday"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="66.6"
            android:gravity="center"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/text_Saturday"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="66.6"
            android:gravity="center"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/text_Sunday"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_weight="66.6"
            android:gravity="center"
            android:textAlignment="center" />


    </LinearLayout>


    <Button
        android:id="@+id/button_lastweek"
        android:layout_width="179dp"
        android:layout_height="13dp"
        android:layout_weight="30.6"
        android:text="BACK"
        android:textSize="20dp" />


</LinearLayout>





